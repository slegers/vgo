<Window x:Class="HelloWorldWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" FontSize="40" FontWeight="Bold" Foreground="Blue" >
    <Grid Margin="0,0,0,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="pink" Offset="0"></GradientStop>
                <GradientStop Color="Red" Offset="0.5"></GradientStop>
                <GradientStop Color="Cyan" Offset="1"></GradientStop>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="111,84,0,0" TextWrapping="Wrap" Text="Hello World!" VerticalAlignment="Top" Height="83" Width="304"/>
    </Grid>
</Window>
